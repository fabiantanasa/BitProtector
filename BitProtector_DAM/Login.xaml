<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitProtector_DAM.Login"
             BackgroundColor="#112B47">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="BitProtector.png" WidthRequest="180" HeightRequest="180"></Image>
            
            <Entry x:Name="txtUsername" Placeholder="Nume de utilizator" TextColor="white" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="txtPassword" Placeholder="Parola" IsPassword="True" TextColor="white" PlaceholderColor="Gray"></Entry>
            <Button
                VerticalOptions="Center"
                Text="Intră în cont"
                TextColor="white"
                BackgroundColor="Transparent"
                BorderColor="#77BB3F"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Login_Clicked"
                ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>